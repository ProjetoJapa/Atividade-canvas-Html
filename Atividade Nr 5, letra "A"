<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atividade 5</title>
    <style>
        canvas {
            background-color: rgba(233, 233, 233);
            border: 1px solid black;
        }
    </style>

</head>

<body>
    <canvas width="1200" height="300"> </canvas>

    <script>
        let canvas = document.querySelector('canvas');
        let context = canvas.getContext('2d');

        context.lineWidth = 3;

        //retangulo em volta do triângulo
        context.beginPath();
        context.rect(50, 50, 350, 200);
        context.stroke();
        context.fillStyle = 'white';
        context.fill();
        context.strokeStyle = '#2D3970';
        context.closePath();
        context.stroke();
        //triângulo:
        context.beginPath();
        context.moveTo(225, 100);
        context.lineTo(150, 200);
        context.lineTo(300, 200);
        context.fillStyle = '#4568F5';
        context.fill();

        //cirulo
        context.beginPath();
        context.arc(600, 150, 80, 0, 2 * Math.PI);
        context.stroke();
        context.fillStyle = 'white';
        context.fill();
        context.strokeStyle = '#2D3970';
        context.closePath();
        context.stroke();
        //retangulo dentro do circulo
        context.beginPath();
        context.rect(550, 100, 100, 100);
        context.fillStyle = '#4568F5';
        context.fill();
        context.closePath();
        context.strokeStyle = '#2D3970';
        context.stroke();


        //triângulo esquerdo:
        context.beginPath();
        context.moveTo(850, 50);
        context.lineTo(750, 225);
        context.lineTo(950, 225);
        context.fillStyle = 'white';
        context.fill();
        context.closePath();
        context.strokeStyle = "#4D75F5";
        context.stroke();

        //triângulo direito:
        context.beginPath();
        context.moveTo(1000, 50);
        context.lineTo(900, 225);
        context.lineTo(1100, 225);
        context.fillStyle = 'white';
        context.fill();
        context.closePath();
        context.strokeStyle = "#4D75F5";
        context.stroke();
        //triângulo centro pequeno:
        context.beginPath();
        context.moveTo(925, 180);
        context.lineTo(900, 225);
        context.lineTo(950, 225);
        context.fillStyle = 'white';
        context.fill();
        context.closePath();
        context.strokeStyle = "#4D75F5";
        context.stroke();
    </script>
</body>

</html>
